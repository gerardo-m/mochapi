<div class="flex flex-row px-5 border-2 border-blue-200 rounded-2xl">

  <div class="flex flex-row w-full h-10">
    <a href="<%= edit_endpoint_path(endpoint)%>" class="flex  w-full text-2xl font-bold hover:text-blue-700 dark:hover:text-blue-500 items-center"> 
      <div class="flex items-center w-1/3 text-2xl font-bold"> <%= endpoint.name%></div>
      <div class="flex items-center font-normal text-base"><%= endpoint.path%></div>
    </a>
  </div>
  <div class="w-24 flex flex-row items-center justify-end">
    <div class="stroke-red-600 hover:stroke-red-800">
      <%= render "components/delete_icon_button", model: endpoint, size: "2rem" %>
    </div>
  </div>
</div>