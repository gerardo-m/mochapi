<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Endpoints" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Endpoints</h1>
    <%= link_to "New endpoint", new_project_endpoint_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="endpoints" class="min-w-full flex flex-col py-5 space-y-5">
    <% @endpoints.each do |endpoint| %>
      <%= render "endpoint_item", endpoint: endpoint %>
    <% end %>
  </div>
</div>
