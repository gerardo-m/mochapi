<div id="<%= dom_id project %>" class="mx-5 flex flex-col space-y-5 my-10">
  <div class="flex flex-row w-full items-center">
    <strong class="block font-medium mb-1 w-1/3">Space name:</strong>
    <div class="w-1/3"><%= project.space_name %></div>
  </div>
  <div class="flex flex-row w-full items-center">
    <strong class="block font-medium mb-1 w-1/3">Url preffix:</strong>
    <%= project.url_preffix %>
  </div>
  <div class="flex flex-row w-full items-center border-t-2 pt-5">
    <strong class="block font-medium mb-1 w-1/3">Endpoints:</strong>
    <div class="w-1/3"><%= project.endpoints.count %></div>
    <%= link_to "Endpoints", project_endpoints_path(project_id: project.id), class: "rounded-lg py-2 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

</div>
