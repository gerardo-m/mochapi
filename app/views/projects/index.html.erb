<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Projects" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to "New project", new_project_path, class: "btn-primary rounded-lg py-3 px-5 block font-medium" %>
  </div>

  <div id="projects" class="min-w-full flex flex-col py-5 space-y-5">
    <% @projects.each do |project| %>
      <%= render "project_item", project: project %>
    <% end %>
  </div>
</div>
