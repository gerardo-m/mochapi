<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Variables" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Variables</h1>
    <%= link_to "Add response", new_m_variable_path(), class: "btn-primary rounded-lg py-3 px-5 font-medium", data: {"turbo-stream": true} %>
  </div>
  <turbo-frame id="variables">
    <div class="min-w-full flex flex-col py-5 space-y-5">
      <h2 class="font-bold text-2xl"><%= controller_name.classify %> variables</h2>
      <% @own_variables.each do |variable|%>
        <div class="flex flex-row px-5 border-2 border-blue-200 rounded-2xl">
          <%= render 'item'%>
        </div>
      <% end%>
    </div>
  </turbo-frame>
  
  <div id="inherited" class="min-w-full flex flex-col py-5 space-y-5">
    <h2 class="font-bold text-2xl">Inherited variables</h2>
    <% @inherited_variables.each do |variable|%>
      <div class="flex flex-row px-5 border-2 border-blue-200 rounded-2xl">
        This
      </div>
    <% end%>
  </div>
  
</div>


