<div class="w-full space-y-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Variables" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Variables</h1>
    <%= link_to "Add variable", new_m_variable_path(variable_holder_type: controller_name.classify, variable_holder_id: @model_instance.id), class: "btn-primary rounded-lg py-3 px-5 font-medium", data: {"turbo-stream": true} %>
  </div>
  <turbo-frame id="variables">
      <h2 class="font-bold text-2xl py-3"><%= controller_name.classify %> variables</h2>
      <% @own_variables.each do |variable|%>
        <%= render 'm_variables/edit_item', m_variable: variable %>
      <% end%>
  </turbo-frame>
  
  <turbo-frame id="inherited" class="min-w-full flex flex-col py-5 space-y-5">
    <h2 class="font-bold text-2xl">Inherited variables</h2>
    <% @inherited_variables.each do |variable|%>
      <%= render 'm_variables/inherited_item', m_variable: variable%>
    <% end%>
  </turbo-frame>
  
</div>


